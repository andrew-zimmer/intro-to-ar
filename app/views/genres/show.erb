<h1>Show Page</h1>

<h2><%= @genre.name %></h2>

<ol>
<% @genre.movies.each do |movie| %>
    <li><%= movie.name %></li>

<% end %>
</ol>

<a href="/genres/<%=  @genre.id  %>/edit">Edit this genre</a>

<form action="/genres/<%=  @genre.id  %>" method="POST">
  <input type="hidden" value="DELETE"  name="_method">
  <input type="submit" value="Delete">

</form>

